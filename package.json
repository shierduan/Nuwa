{
  "name": "nuwa-frontend",
  "version": "1.0.0",
  "description": "数字生命Nuwa的前端界面",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "live2d",
    "electron",
    "digital-life",
    "nuwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.nuwa.frontend",
    "productName": "Nuwa",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "style.css",
      "main.js",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    }
  },
  "dependencies": {
    "live2d-widget": "^3.1.4",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^5.3.3",
    "sweetalert2": "^11.7.20"
  }
}
